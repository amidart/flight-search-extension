{
  "manifest_version": 2,
  "name": "Flights search",
  "description": "",
  "version": "0.1",

  "icons": {
    "128": "/img/icon256.png"
  },

  "browser_action": {
    "default_icon": "/img/icon256.png",
    "default_popup": "/html/popup.html"
  },

  "background": {
    "scripts": [
      "/lib/jquery-2.1.1.min.js",
      "/js/Task.js",
      "/js/TaskManager.js",
      "/js/Log.js",
      "/js/background.js"
    ]
  },

  "content_scripts": [
    {
      "matches": [
        "*://buruki.ru/*"
      ],
      "js": [
        "/lib/jquery-2.1.1.min.js",
        "/js/cs-buruki.js"
      ],
      "run_at": "document_end"
    }
  ],

  "web_accessible_resources" : [
    "/img/*"
  ],

  "permissions": [
  ]
}
